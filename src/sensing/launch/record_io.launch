<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <!-- Command-line arguments for remote machine, defaults to shrimp opts -->
  <arg name="user" default="shrimp"/>
  <arg name="ip" default="192.168.50.81"/>

  <!-- Should this record the data locally? May be more reliable than recording over WiFi -->
  <arg name="local" default="false"/>
  <machine name="lean" address="$(arg ip)" user="$(arg user)" env-loader="/home/$(arg user)/lean_ws/src/controller/env/$(arg user)_env.sh"/>

  <!-- Begin recording IO -->
  <param name="/use_sim_time" value="false"/>
  <node if="$(arg local)" machine="lean" name="io_recorder" pkg="sensing" type="io_recorder.py" output="screen"/>
  <node unless="$(arg local)" name="io_recorder" pkg="sensing" type="io_recorder.py" output="screen"/>
</launch>
